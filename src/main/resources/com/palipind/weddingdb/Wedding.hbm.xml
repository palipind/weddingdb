<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.palipind.weddingdb">

    <class name="Wedding" table="wedding">
        <meta attribute="class-description"><![CDATA[
This table stores enteries for every wedding
@author Rohan Jain
        ]]>
        </meta>
        <id name="weddingId" type="string" unsaved-value="0">
            <generator class="native"/>
        </id>

        <property name="person1" column="person1" type="string"/>
        <property name="person2" column="person2" type="string"/>
        <property name="description" column="description" type="string"/>
    </class>
</hibernate-mapping>